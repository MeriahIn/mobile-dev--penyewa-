<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_user_image_profile"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/user_pp_1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_code"
        style="@style/TextView.Grey300.12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SI091234"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16.5dp"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintStart_toEndOf="@id/civ_user_image_profile"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_user_name"
        style="@style/TextView.Grey.16Sp.SemiBold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Badu Atai"
        app:layout_constraintTop_toBottomOf="@id/actv_code"
        app:layout_constraintStart_toStartOf="@id/actv_code"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_service_name"
        style="@style/TextView.Grey500.12Sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/actv_user_name"
        android:text="Layanan Pesta Pernikahan"
        app:layout_constraintStart_toStartOf="@id/actv_user_name"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_price"
        style="@style/TextView.Grey.16Sp.BoldInter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 500.000"
        app:layout_constraintTop_toTopOf="@id/actv_code"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_done"
        style="@style/TextViewAvailableStatus"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_done_bg"
        android:textColor="@color/grey_700"
        android:text="Selesai"
        android:layout_height="wrap_content"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/actv_service_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_canceled"
        style="@style/TextViewAvailableStatus"
        android:layout_width="wrap_content"
        android:background="@drawable/ic_canceled_bg"
        android:drawableStart="@drawable/ic_close"
        android:textColor="@color/grey_700"
        android:text="Dibatalkan"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:paddingVertical="2dp"
        android:paddingHorizontal="10sp"
        app:layout_constraintBottom_toBottomOf="@id/actv_service_name"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        android:layout_marginTop="16.5dp"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/actv_service_name"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>