<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ac_iv_back3"
        android:layout_width="65dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/img_button_back" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="373dp"
        android:layout_height="172dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ac_iv_back3"
        app:srcCompat="@drawable/img_upload" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Nama Layanan"
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_nama_layanan"
        android:layout_width="382dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/inter_regular"
        android:text="   Jawaban Anda"
        android:textColor="@color/grey_500"

        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView">

    </androidx.appcompat.widget.AppCompatEditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Status Layanan"
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/ac_et_deskripsi"
        app:layout_constraintTop_toBottomOf="@+id/ac_et_deskripsi" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Kebutuhan Layanan Paket"
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_kebutuhan1"
        android:layout_width="298dp"
        android:layout_height="23dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/inter_regular"

        android:text="   +Tambah Kebutuhan Layanan"
        android:textColor="@color/grey_500"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </androidx.appcompat.widget.AppCompatEditText>


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_plusminus"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_edit_text"

        android:fontFamily="@font/inter_semi_bold"
        android:text="   +  0  -"
        android:textColor="@color/grey_500"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/ac_et_kebutuhan1"
        app:layout_constraintTop_toTopOf="@+id/ac_et_kebutuhan1">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_kebutuhan3"
        android:layout_width="298dp"
        android:layout_height="23dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/background_edit_text"

        android:fontFamily="@font/inter_regular"
        android:text="   +Tambah Kebutuhan Layanan"
        android:textColor="@color/grey_500"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/ac_et_kebutuhan1"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_plusminus2"
        android:layout_width="68dp"
        android:layout_height="23dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/background_edit_text"

        android:fontFamily="@font/inter_semi_bold"
        android:text="   +  0  -"
        android:textColor="@color/grey_500"
        android:textSize="15dp"
        app:layout_constraintStart_toEndOf="@+id/ac_et_kebutuhan3"
        app:layout_constraintTop_toTopOf="@+id/ac_et_kebutuhan3">

    </androidx.appcompat.widget.AppCompatEditText>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Harga"
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/ac_et_nama_layanan"
        app:layout_constraintTop_toBottomOf="@+id/ac_et_nama_layanan" />


    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Deskripsi "
        android:textColor="@color/grey_700"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/ac_et_harga"
        app:layout_constraintTop_toBottomOf="@+id/ac_et_harga" />


    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_deskripsi"
        android:layout_width="382dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/inter_regular"
        android:text="   Jawaban Anda"

        android:textColor="@color/grey_500"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView6"
        app:layout_constraintTop_toBottomOf="@+id/textView6">

    </androidx.appcompat.widget.AppCompatEditText>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/ac_et_harga"
        android:layout_width="382dp"
        android:layout_height="31dp"
        android:background="@drawable/background_edit_text"
        android:fontFamily="@font/inter_regular"
        android:text="   RP Jawaban Anda"
        android:textColor="@color/grey_500"

        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    </androidx.appcompat.widget.AppCompatEditText>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="208dp"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/ac_button_submit"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_bag_shape_blue"
        android:fontFamily="@font/inter_semi_bold"
        android:text="Submit"
        android:textColor="@color/blue_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

    </androidx.appcompat.widget.AppCompatButton>


</androidx.constraintlayout.widget.ConstraintLayout>