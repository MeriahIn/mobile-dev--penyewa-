<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/aciv_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@color/blue_100"/>
    </com.google.android.material.card.MaterialCardView>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_name"
        style="@style/TextView.Grey.16Sp.BoldInter"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Catering King\nAlam"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/mcv_image"
        app:layout_constraintStart_toStartOf="@id/mcv_image"
        app:layout_constraintEnd_toEndOf="@id/mcv_image"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_adress"
        style="@style/TextView.Grey500.12Sp.Medium"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Jl. Ahmad Yani"
        app:layout_constraintStart_toStartOf="@id/actv_name"
        app:layout_constraintEnd_toEndOf="@id/actv_name"
        app:layout_constraintTop_toBottomOf="@id/actv_name"/>
    
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/actv_rating"
        style="@style/TextView.Grey600.12sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="5.0"
        app:layout_constraintStart_toStartOf="@id/actv_adress"
        app:layout_constraintEnd_toEndOf="@id/actv_adress"
        app:layout_constraintTop_toBottomOf="@id/actv_adress"
        android:drawableStart="@drawable/ic_star_rating"
        android:drawablePadding="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>