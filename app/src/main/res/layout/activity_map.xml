<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".service.MapActivity">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/container_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/aciv_back"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="24dp"
        android:src="@drawable/ic_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    

    <androidx.appcompat.widget.AppCompatTextView
        style="@style/TextView.Grey.20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pilih Alamat"
        android:textSize="18sp"
        android:fontFamily="@font/inter_extra_bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="@id/aciv_back"
        app:layout_constraintStart_toEndOf="@id/aciv_back"
        app:layout_constraintBottom_toBottomOf="@id/aciv_back"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_finish"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:layout_width="94dp"
        android:layout_height="wrap_content"
        android:textSize="13sp"
        android:text="Selesai"
        android:backgroundTint="@color/blue_500"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>